{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@api/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@prisma/*": ["./prisma/*"],
      "@mocks/*": ["./mocks/*"]
    }
  }
}
