{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@api/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@prisma/*": ["./prisma/*"]
    }
  }
}
